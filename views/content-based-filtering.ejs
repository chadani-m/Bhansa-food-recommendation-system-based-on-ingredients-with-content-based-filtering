<!-- ingredient search form -->
<div class="container">
  <h1 class="text-center mt-5">Content-based-filtering Search</h1>

  <!-- Form for content-based-filtering search -->
  <form method="post" action="/content-based-filtering" class="mb-4">
      <input type="search" name="searchTermForRecommendation" class="form-control" placeholder="Recipe Search..." aria-label="Content Based Filtering Search">
      <button type="submit" class="btn btn-primary mt-2">Search Similar Recipes</button>
  </form>
</div>

<!-- recipe recommendation -->
<div class="container">
  <h1 class="pb-4">Content-based-filtering Search Results</h1>

  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
      <% if(recipe && recipe.length > 0) { %>
          <% recipe.forEach(function(recipe, index){ %>
          <a href="/recipe/<%= recipe._id %>" class="col text-center category__link">
              <div class="category_img category__img--large shadow">
                  <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy">
              </div>
              <div class="pt-1"><%= recipe.name %></div>
          </a>
          <% }) %>
      <% } else { %>
          <p>No items found.</p>
      <% } %>
  </div>
</div>
